generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Sweet {
  id       Int    @id @default(autoincrement())
  name     String
  category String
  price    Float
  quantity Int
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String @default("user")
}
