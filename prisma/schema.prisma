generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String
  role     String @default("user")
  verify   Boolean @default(false)

  token Token[]
}

model Token {
  id Int @id @default(autoincrement())
  
  tokenHash String
  expiresAt DateTime 

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

}